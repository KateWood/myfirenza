<div class="slight-down">

	<% if current_user %>

		<div class="slide" id="main1">
			<%= render 'main' %>
		</div>

		<div class="slide center" id="contact1">
			<h2>Thank you for contacting Firenza!</h2>
			<h2>A team member will be in touch with you soon!</h2>
		</div>

		<div class="slide" id="stats1">
			<%= render 'stats' %>
		</div>

		<div class="slide" id="process1">
			<%= render 'process' %>
		</div>

		<div class="slide" id="ready1">
			<%= link_to (image_tag 'ready.png', :title => "Ready to make some dough?"), '#contact1' %>
		</div>

		<div class="page-footer">
			<h6 class="col-md-4 center">&copy; 2015 Firenza Pizza Franchise LLC</h6>
			<h6 class="col-md-4 center"><%= link_to 'Contact us!', new_inquiry_path %></h6>
			<h6 class="col-md-4 center"><%= link_to 'Website not displaying correctly?', 'https://www.google.com/chrome/browser/desktop/index.html' %></h6>
			<br>
		</div>

	<% else %>

		<div class="no-access container">
			<h4>Please <%= link_to 'log in', login_path %> to access this page.</h4>
		</div>

	<% end %>

</div>