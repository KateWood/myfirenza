<%= render 'nav' %>

<div class="slight-down">

	<% if current_user %>

		<div class="slide" id="main">
			<%= render 'main' %>
		</div>

		<div class="slide" id="contact">
			<%= render 'contact' %>
		</div>

	<% else %>

		<div class="no-access container">
			<h4>Please <%= link_to 'log in', login_path %> to access this page.</h4>
		</div>

	<% end %>

</div>