<%= render 'pages/nav' %>

<% if current_user %>

	<div class="container down">

		<h3>Add notes to <%= @inquiry.first_name %> <%= @inquiry.last_name %>'s Inquiry</h3>
		<%= form_for(@inquiry) do |f| %>
			<div class="form-group">
				<%#= f.label :notes %>
				<%= f.text_area :notes, :placeholder => "Add notes here.", :class => "large" %>
			</div>
			<div class="form-group">
				<%= f.submit 'Add notes', :class => "btn btn-default" %>
			</div>
		<% end %>
		<%= link_to 'Back to inquiry', inquiry_path(@inquiry), :class => "btn btn-default" %>
	</div>

<% else %>

	<div class="no-access container">
		<h4>Please <%= link_to 'log in', login_path %> to access this page.</h4>
	</div>

<% end %>


